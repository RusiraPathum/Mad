<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".User_registerActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/loginlogo1" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="75dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000" />



    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignStart="@+id/edit_email"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="75dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />



    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_email"
        android:layout_alignStart="@+id/edit_password"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="75dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/text_confompassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password"
        android:layout_alignStart="@+id/edit_password"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="24dp"
        android:text="Conform Password"
        android:textColor="#000000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_confompassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_confompassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="74dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" />


    <Button
        android:id="@+id/add_user"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_below="@+id/edit_confompassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="133dp"
        android:background="@drawable/button_rectangle_blue"
        android:text="Register"
        android:textColor="#ffffff" />

</RelativeLayout>