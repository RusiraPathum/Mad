<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomepageActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="154dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Board Me Admin Panel"
            android:textColor="#000000"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/homepageusericon" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:text="Login"
            android:textColor="#000000" />


    </RelativeLayout>


    <TextView
        android:id="@+id/boarding_panel"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="210dp"
        android:text="Boarding panal"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/boarding_panal_addboard"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_below="@+id/boarding_panel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="263dp"
        android:text="Add Boarding" />

    <TextView
        android:id="@+id/boarding_panal_boardinglist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boarding_panal_addboard"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="263dp"
        android:text="Boarding List" />

    <TextView
        android:id="@+id/hostal_panel"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boarding_panal_boardinglist"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="225dp"
        android:text="Hostal Panal"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/hostal_panal_addhostal"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_below="@+id/hostal_panel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="259dp"
        android:text="Add Hostal" />


    <TextView
        android:id="@+id/hostal_panal_hostallist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hostal_panal_addhostal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="260dp"
        android:text="Hostal List" />

    <TextView
        android:id="@+id/feedback_panel"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_below="@+id/hostal_panal_hostallist"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="205dp"
        android:text="Feedback Panal"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/feedback_panal_addfeedback"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_below="@+id/feedback_panel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="259dp"
        android:text="Add Feedback" />


    <TextView
        android:id="@+id/feedback_panal_feedbacklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_panal_addfeedback"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="257dp"
        android:text="Feedback List" />

    <TextView
        android:id="@+id/booking_panel"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_below="@+id/feedback_panal_feedbacklist"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="205dp"
        android:text="Booking Panal"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/booking_panal_addbooking"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_below="@+id/booking_panel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="259dp"
        android:text="Add Booking" />


    <TextView
        android:id="@+id/booking_panal_bookinglist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_panal_addbooking"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="257dp"
        android:text="Booking List" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="0dp"
        android:background="#323A45">

        <Button
            android:id="@+id/feedback_btn"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:background="#e2a500"
            android:text="  Feedback"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/contact_text"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="0dp"
            android:text="Contact Details"
            android:textColor="#f2f2f2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/contact_email_text"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_below="@+id/contact_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="211dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="0dp"
            android:text="boardmeapp@gmail.com"
            android:textColor="#f2f2f2"
            android:textSize="15dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@+id/contact_email_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="211dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="0dp"
            android:text="0362255568"
            android:textColor="#f2f2f2"
            android:textSize="15dp" />

    </RelativeLayout>



</RelativeLayout>