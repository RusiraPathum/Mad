<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Hostallist_homepageActivity">


    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="86dp"
                android:layout_toStartOf="@+id/image"
                android:text="Board Me"
                android:textColor="#000000"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/homepageusericon" />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="0dp"
                android:text="Login"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/hostal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="3dp"
                android:layout_toStartOf="@+id/image"
                android:text="Available X Hostal in List"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" />


        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/hostal_list"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="68dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:background="#323A45">

            <Button
                android:id="@+id/feedback_btn"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_below="@+id/add_hostal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:background="#e2a500"
                android:text="Feedback"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/contact_text"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="-13dp"
                android:text="Contact Details"
                android:textColor="#f2f2f2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/contact_email_text"
                android:layout_width="190dp"
                android:layout_height="20dp"
                android:layout_below="@+id/contact_text"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="-19dp"
                android:layout_toEndOf="@+id/add_hostal"
                android:text="boardmeapp@gmail.com"
                android:textColor="#f2f2f2"
                android:textSize="15dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_below="@+id/contact_email_text"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="-29dp"
                android:layout_toEndOf="@+id/add_hostal"
                android:text="0362255568"
                android:textColor="#f2f2f2"
                android:textSize="15dp" />

            <Button
                android:id="@+id/add_hostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="22dp"
                android:text="Rent your Home" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>